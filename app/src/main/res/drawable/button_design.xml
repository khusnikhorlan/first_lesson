<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#D834EA"/>
            <gradient android:angle="-90" android:startColor="#FFEB3B" android:endColor="#D834EA"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#FFEB3B"/>
            <solid android:color="#D834EA"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#9C27B0"/>
            <gradient android:angle="-90" android:startColor="#FFEB3B" android:endColor="#D834EA"/>
        </shape>
    </item>
</selector>